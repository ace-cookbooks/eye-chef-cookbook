Eye.application "<%= @name %>" do
  working_dir "<%= @working_dir || '/tmp' %>"
  process "<%= @name %>" do
    start_command "<%= @start_command %>"
    <% if @stop_command %>
    stop_command "<%= @stop_command %>"
    <% end -%>
    <% if @stop_signales %>
    stop_signals "<%= @stop_signals %>"
    <% end -%>
    <% if @pid_file %>
    pid_file "<%= @pid_file %>"
    <% end -%>
    <% if @user_srv_uid %>
    uid "<%= @user_srv_uid %>"
    <% end -%>
    <% if @user_srv_gid %>
    gid "<%= @user_srv_gid %>"
    <% end -%>
    daemonize <%= @daemonize || "false" %>
  end
end
